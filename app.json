{
  "expo": {
    "name": "BondVibe",
    "slug": "bondvibe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow BondVibe to access your location to share it with your group."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#FF6B9D"
        }
      ],
      "expo-web-browser"
    ],
    "extra": {
      "EXPO_PUBLIC_FIREBASE_API_KEY": "AIzaSyCLaUcFpX5KcemGsCCMHSfCz49CauUKjGc",
      "EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN": "bondvibe-dev.firebaseapp.com",
      "EXPO_PUBLIC_FIREBASE_PROJECT_ID": "bondvibe-dev",
      "EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET": "bondvibe-dev.firebasestorage.app",
      "EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID": "762181340271",
      "EXPO_PUBLIC_FIREBASE_APP_ID": "1:762181340271:web:fd45de5ece4e2ea1b1e393",
      "eas": {
        "projectId": "0cf2c3f2-26ad-4e9f-816f-b449085f9b10"
      }
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon.png",
      "bundleIdentifier": "com.bondvibe.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "BondVibe needs access to your location to let you share it with your group.",
        "NSLocationAlwaysUsageDescription": "BondVibe needs access to your location to let you share it with your group.",
        "NSCameraUsageDescription": "BondVibe needs camera access to let you take profile pictures and share photos in events.",
        "NSPhotoLibraryUsageDescription": "BondVibe needs photo library access to let you choose profile pictures and share event photos.",
        "NSPhotoLibraryAddUsageDescription": "BondVibe needs permission to save photos to your library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true,
      "icon": "./assets/icon.png",
      "package": "com.bondvibe.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
